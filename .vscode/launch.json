  "version": "0.2.0",
  "configurations": [
      {
        "name": "PyTest",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "module": "pytest",
        "args": [
            "-sv"
        ],
        "cwd": "${workspaceRoot}",
        "env": {},
        "envFile": "${workspaceRoot}/.env",
        "debugOptions": [
            "WaitOnAbnormalExit",
            //"WaitOnNormalExit",
            "RedirectOutput"
        ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
